<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_indicadorGravedad"
            android:background="#e31e1e"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/row_NoTicket"
                    style="@style/row_NoTicket"
                    android:text="No. del Ticket:2156"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"/>
                <TextView
                    android:id="@+id/row_Titulo"
                    style="@style/row_NoTicket"
                    android:text="EL APLICACATIVO DEJÃ“ DE FUNCIONAR"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"/>
            <TextView
                android:id="@+id/row_TipoIncidencia"
                style="@style/row_NoTicket"
                android:text="Incidencia: bug"
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>

                <TextView
                    android:id="@+id/row_Gravedad"
                    style="@style/row_NoTicket"
                    android:text="Gravedad: High"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/row_Estado"
                    style="@style/row_NoTicket"
                    android:text="Nuevo"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"/>

                <TextView
                    android:id="@+id/row_Fecha"
                    style="@style/row_NoTicket"
                    android:text="30-10-2023 15:00hrs"
                    android:layout_gravity="left"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>


    </LinearLayout>
    </LinearLayout>
</LinearLayout>